# This file contains the fastlane.tools configuration
# You can find the documentation at https://docs.fastlane.tools
#
# For a list of all available actions, check out
#
#     https://docs.fastlane.tools/actions
#
# For a list of all available plugins, check out
#
#     https://docs.fastlane.tools/plugins/available-plugins
#

# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:ios)

platform :ios do
  api_key = app_store_connect_api_key(
    key_id: options[:key_id],
    issuer_id: options[:issuer_id],
    key_filepath: options[:key_filepath]
  )
  desc "Set up certificates"
  lane :certificate_setup do |options|
    cert(
      api_key: api_key,
      keychain_path: options[:keychain_path],
      keychain_password: options[:keychain_password]
    )
    sigh(
      api_key: api_key,
      readonly: 'true'
    )
  end
  desc "Release to iOS Store"
  lane :release do |options|
    # upload_to_app_store
    # api_key = app_store_connect_api_key(
    #   key_id: options[:key_id],
    #   issuer_id: options[:issuer_id],
    #   key_filepath: options[:key_filepath]
    # )
    upload_to_testflight(
      ipa: '$PWD/ios-artifact/ReactNativeSemaphoreNew.ipa',
      api_key: api_key
    )
  end
end


platform :android do
  desc "Release to Google Play Store"
  lane :release do |options|
    upload_to_play_store(
      track: 'internal',
      release_status: 'draft',
      aab: options[:aab_path]
    )
  end
end